# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database - Replace with your actual MongoDB connection string
MONGODB_URI=mongodb://localhost:27017/bookbite
MONGODB_TEST_URI=mongodb://localhost:27017/bookbite-test

# JWT Configuration - Generate strong secrets
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here-also-long-and-random
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary Configuration - Get from https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Payment Gateways
# Paystack - Get from https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=pk_test_your-paystack-public-key

# MTN Mobile Money - Get from https://momodeveloper.mtn.com/
MTN_MOMO_BASE_URL=https://sandbox.momodeveloper.mtn.com
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_MOMO_API_USER=your-mtn-api-user
MTN_MOMO_API_KEY=your-mtn-api-key

# PalmPay - Contact PalmPay for API access
PALMPAY_BASE_URL=https://api.palmpay.com
PALMPAY_API_KEY=your-palmpay-api-key
PALMPAY_SECRET_KEY=your-palmpay-secret-key
PALMPAY_MERCHANT_ID=your-palmpay-merchant-id

# Push Notifications - Get from https://expo.dev/accounts/[account]/settings/access-tokens
EXPO_ACCESS_TOKEN=your-expo-access-token-here

# Frontend URL (for payment callbacks and CORS)
FRONTEND_URL=http://localhost:3001
SOCKET_CORS_ORIGIN=http://localhost:3001

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (Optional - for caching and sessions)
REDIS_URL=redis://localhost:6379

# Security Configuration
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Ghana Specific Configuration
DEFAULT_CURRENCY=GHS
DEFAULT_TIMEZONE=Africa/Accra
SUPPORTED_REGIONS=Greater Accra,Ashanti,Western,Central,Eastern,Northern,Upper East,Upper West,Volta,Brong Ahafo

# Development/Testing
SEED_DATABASE=false
ENABLE_SWAGGER=true